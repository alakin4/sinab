LIBDIR = mdlayout/target/release
STATLIB = $(LIBDIR)/libmdlayout.a
PKG_LIBS = -L$(LIBDIR) -lmdlayout

all: C_clean

$(SHLIB): $(STATLIB)

$(STATLIB):
	cargo build --release --manifest-path=mdlayout/Cargo.toml

C_clean:
	rm -Rf $(SHLIB) $(STATLIB) #$(OBJECTS)

clean:
	rm -Rf $(SHLIB) $(STATLIB) $(OBJECTS) mdlayout/target