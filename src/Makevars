#LIBDIR = mdlayout/target/release  # use with --release in cargo call below
LIBDIR = mdlayout/target/debug
STATLIB = $(LIBDIR)/libmdlayout.a
PKG_LIBS = -L$(LIBDIR) -lmdlayout

all: C_clean

$(SHLIB): $(STATLIB)

$(STATLIB):
	cargo build --manifest-path=mdlayout/Cargo.toml

C_clean:
	rm -Rf $(SHLIB) $(STATLIB) #$(OBJECTS)

clean:
	rm -Rf $(SHLIB) $(STATLIB) $(OBJECTS) mdlayout/target